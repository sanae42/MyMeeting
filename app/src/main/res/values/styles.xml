<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="em_login_et_input">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_marginLeft">@dimen/em_login_margin_left</item>
        <item name="android:layout_marginRight">@dimen/em_login_margin_right</item>
        <item name="android:maxWidth">400dp</item>
        <item name="android:background">@drawable/demo_login_et_bg</item>
        <item name="android:paddingLeft">@dimen/em_login_padding_left</item>
        <item name="android:paddingRight">@dimen/em_login_padding_right</item>
        <item name="android:textSize">@dimen/em_login_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
    </style>


    <style name="em_login_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginLeft">@dimen/em_login_margin_left</item>
        <item name="android:layout_marginRight">@dimen/em_login_margin_right</item>
        <item name="android:background">@drawable/demo_login_btn_bg</item>
        <item name="android:foreground">@drawable/demo_ripple_click_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:enabled">true</item>
        <item name="android:textSize">16sp</item>
        <!--        <item name="android:drawableRight">@drawable/demo_login_btn_right_unable</item>-->
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingStart">5dp</item>
    </style>


    <style name="em_login_tv_other">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">44dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="liearlayout_item_view">
        <!--触摸状态时颜色-->


        <item name="android:background" state_pressed="true">@color/light_gray</item>
<!--        <item name="android:b" state_focused="true">@color/light_gray</item>-->
    </style>




</resources>